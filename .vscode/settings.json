{
	/**
	 * Window
	 */
	"window.zoomLevel": 0.35,

	/**
	 * Editor
	 */
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	// "editor.minimap.enabled": true,
	"editor.codeActionsOnSave": {
		// Format on save
		"source.fixAll.biome": "explicit",
		// Imports Sorting
		"source.organizeImports.biome": "explicit"
	},
	"editor.rulers": [80],
	"editor.tabSize": 2,
	"editor.wordWrap": "on"
}
